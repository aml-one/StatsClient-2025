                                                <i:EventTrigger EventName="Checked">
                                                    <i:InvokeCommandAction Command="{Binding BuildNameCommand}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>
                                    </DockPanel>
                                </StackPanel>

