                                                     IsTabStop="False"
                                                     Cursor="Hand"
                                                     HorizontalAlignment="Right"
                                                     IsChecked="{Binding NamingCustomerLast}"
                                                     VerticalAlignment="Bottom"
                                                     Margin="0,0,4,2">
